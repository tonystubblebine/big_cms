<h1>Listing Snippets</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @components.each do |component| %>
  <tr>
    <td><%= component.name %></td>
    <td class="actions">
      <%= link_to "show", big_cms_component_path(component) %>
      <%= link_to "edit", edit_big_cms_component_path(component) %>
      <%= link_to 'delete', big_cms_component_path(component), :confirm => 'Are you sure?', :method => :delete %>
    </td>

  </tr>
<% end %>
</table>

<br />

