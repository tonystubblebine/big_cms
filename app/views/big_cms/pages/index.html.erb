<body class="index">
	<%= stylesheet_link_tag "tablesorter" %>
	<%= javascript_include_tag 'jquery.tablesorter.min' %>
	<script>
		function setSizes(){
			$('#nav-resize').height($(window).height() - 54);
			$('#nav_listing').height($("#nav-resize").height() - 24);	
		}
		$(document).ready(function(){ 
			setSizes();
		    $("#pages-table").tablesorter({ widgets: ['zebra'] }); 
		});
	
		$(window).resize(function() {
		  	setSizes();
		});
	</script>

	<h1>Pages</h1>

	<table id="pages-table" class="tablesorter">
	  <thead>
			<tr>
	    		<th>Title</th>
	    		<th>Version</th>
	    		<th>Last updated</th>
	    		<th></th>
	  		</tr>
	    </thead>

		<tbody>
			<% @pages.each do |page| %>
			  <tr>
			    <td class="title"><%= link_to page.title, edit_big_cms_page_path(page) %></td>
			    <td class="version"><%= page.version %></td>
			    <td class="updated_at"><%= page.updated_at.to_s :short %></td>
			    <td class="actions">
			      <%= link_to "show", big_cms_page_path(page) %>
			      <%= link_to "edit", edit_big_cms_page_path(page) %>
			      <%= link_to 'delete', big_cms_page_path(page), :confirm => 'Are you sure?', :method => :delete %>
			    </td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<br />
</body>

