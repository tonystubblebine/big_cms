        </li>
        <li class="navigations">
          <h3>Navigation</h3>
          <ul>
            <li class="index"><%= link_to "Components", components_path() %></li>
            <li class="new"><%= link_to "Add New", new_component_path() %></li>
          </ul>
        </li>
        <li class="content_managers">
          <h3>Content Components</h3>
          <ul>
            <li class="edit"><%= link_to "Permissions", edit_content_manager_path(current_cms) %></li>
          </ul>
        </li>
      </ul>
    </div><!-- #nav -->

    <div class="grid_11 omega">
      <%= yield %>
    </div>
    <div class="clear" />
  </div><!-- #body -->

